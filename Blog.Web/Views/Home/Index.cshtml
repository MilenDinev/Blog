@using Blog.Data.Models.ResponseModels.Article;

@model List<ArticlePreviewModel>

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Article Board</h1>

    <!-- Search Form -->
    <form method="get" asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="search" placeholder="Search Articles" value="@ViewBag.Search" />
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var article in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(article.ImageUrl))
                    {
                        <img src="@article.ImageUrl" class="card-img-top" alt="@article.Title">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">
                            @Html.Raw(article.Description.Length > 150 ? article.Description.Substring(0, 150) + "..." : article.Description)
                        </p>
                        <p><strong><em>Up Votes:</em></strong> <span style="color: grey;">@article.UpVotes</span></p>
                        <p><strong><em>Creator:</em></strong> <span style="color: grey;">@article.Creator</span></p>
                        <p class="text-muted">Created on @article.CreationDate</p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-controller="Articles" asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Articles" asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger">Delete</a>
                        }
                        <a asp-controller="Articles" asp-action="Article" asp-route-Id="@article.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>