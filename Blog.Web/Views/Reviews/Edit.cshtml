@model Blog.Data.Models.ViewModels.Review.ReviewEditViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Review";

    if (!User.IsInRole("admin"))
    {
        // Redirect or show an access denied message for users who are not in the Admin role.
        // You can use the following line to redirect to an access denied page:
        // Response.Redirect("/AccessDenied");
    }
}


@if (User.IsInRole("admin"))
{
    <h1>Edit Review</h1>

    <form asp-controller="Reviews" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group bg-light p-2">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="ImageUrl">Image Url</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="VideoUrl">Video Url</label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="ExternalArticleUrl">External Url</label>
            <input asp-for="ExternalArticleUrl" class="form-control" />
            <span asp-validation-for="ExternalArticleUrl" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="TopPick" class="form-check-input" />
            <label asp-for="TopPick" class="form-check-label">Top Pick</label>
            <span asp-validation-for="TopPick" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="SpecialOffer" class="form-check-input" />
            <label asp-for="SpecialOffer" class="form-check-label">Special Offer</label>
            <span asp-validation-for="SpecialOffer" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="AssignedTags" class="control-label">Tags</label>
            <div class="row">
                @foreach (var tag in Model.AvailableTags)
                {
                    <div class="col-6">
                        <div class="form-check">
                            <input type="checkbox" name="AssignedTags" value="@tag.Id" class="form-check-input" />
                            <label class="form-check-label">@tag.Value</label>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="AssignedPricingStrategies" class="control-label">Pricing Strategy</label>
            <div class="row">
                @foreach (var pricingStrategy in Model.AvailablePricingStrategies)
                {
                    <div class="col-6">
                        <div class="form-check">
                            <input type="checkbox" name="AssignedPricingStrategies" value="@pricingStrategy.Id" class="form-check-input" />
                            <label class="form-check-label">@pricingStrategy.Strategy</label>
                        </div>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
}
<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>