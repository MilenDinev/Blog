@model List<ArticleViewModel>

@{
    Layout = "_Layout";
}

<style>
    /* Add your CSS styles here */
    .container {
        margin-top: 20px;
    }

    .article-list {
        list-style: none;
        padding: 0;
    }

    .article-item {
        border: 1px solid #ccc;
        margin-bottom: 10px;
        padding: 10px;
    }

    .article-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .article-actions {
        margin-top: 10px;
    }
</style>

<div class="container">
    <h1>Articles Created by @User.Identity.Name</h1>
    <ul class="article-list">
        @foreach (var article in Model)
        {
            <li class="article-item">
                <h2 class="article-title">@article.Title</h2>
                <p>@article.Description</p>
                <div class="article-actions">
                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger">Delete</a>
                </div>
            </li>
        }
    </ul>
</div>