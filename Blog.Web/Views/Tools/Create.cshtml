@using Blog.Data.Models.RequestModels.Tool
@model ToolCreateModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Tool Article";
}

    <h2>Create Tool Article</h2>

    <form asp-controller="Tools" class="col-md-8" asp-action="Create" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group bg-light p-2">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="8"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="VideoUrl"></label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="ExternalArticleUrl"></label>
            <input asp-for="ExternalArticleUrl" class="form-control" />
            <span asp-validation-for="ExternalArticleUrl" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="TopPick" class="form-check-input" />
            <label asp-for="TopPick" class="form-check-label"></label>
            <span asp-validation-for="TopPick" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="SpecialOffer" class="form-check-input" />
            <label asp-for="SpecialOffer" class="form-check-label"></label>
            <span asp-validation-for="SpecialOffer" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="GPTs" class="form-check-input" />
            <label asp-for="GPTs" class="form-check-label"></label>
            <span asp-validation-for="GPTs" class="text-danger"></span>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="AssignedTags" class="control-label">Tags</label>
            <vc:available-tags></vc:available-tags>
        </div>

        <div class="form-group bg-light p-2">
            <label asp-for="AssignedPricingStrategies" class="control-label">Pricing Strategy</label>
            <vc:available-pricing-strategies></vc:available-pricing-strategies>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>

<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}