@using Blog.Data.Models.ViewModels.Video
@model VideoViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "View Video";
}

<div class="container">
    <h2 class="mt-3">View Video</h2>

    @if (!string.IsNullOrEmpty(Model.Url))
    {
        <div class="embed-responsive embed-responsive-16by9 mt-3">
            <iframe class="embed-responsive-item" width="560" height="360" src="@Model.Url" frameborder="0" allowfullscreen></iframe>
        </div>
    }

    <p class="mt-3">Uploaded on: @Model.UploadDate</p>

    @if (!string.IsNullOrEmpty(Model.RelatedToolName))
    {
        <p class="mt-3">Related Tool: <a href="@Model.RelatedToolUrl">@Model.RelatedToolName</a></p>
    }

    <div class="mt-3">
        <a asp-controller="Videos" asp-action="Dashboard" class="btn btn-secondary">Back to Video List</a>
    </div>
</div>