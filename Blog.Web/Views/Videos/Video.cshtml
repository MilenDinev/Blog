@using Blog.Data.Models.ViewModels.Video
@model VideoViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "View Video";
}

<div class="container">
    <h2 class="mt-3">@Model.Title</h2>

    @if (!string.IsNullOrEmpty(Model.Url))
    {
        <div class="row">
            <div class="col-md-8">
                <div class="embed-responsive embed-responsive-16by9 mt-3">
                    <iframe class="embed-responsive-item" width="560" height="315" src="@Model.Url" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-8">
            <p class="mt-3">Uploaded on: @Model.UploadDate</p>
            @if (!string.IsNullOrEmpty(Model.RelatedToolName))
            {
                <p class="mt-3">Related Tool: <a href="@Model.RelatedToolUrl">@Model.RelatedToolName</a></p>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    <p class="card-text">Youtube: @Model.Contacts.Youtube</p>
                    <p class="card-text">X: @Model.Contacts.X</p>
                    <p class="card-text">Discord: @Model.Contacts.Discord</p>
                    <p class="card-text">Email: @Model.Contacts.Email</p>
                </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Videos" asp-action="Dashboard" class="btn btn-secondary">Back to Video List</a>
    </div>
</div>